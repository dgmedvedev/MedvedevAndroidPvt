<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/menu">

        <View
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@color/AustriaRed"/>
        <View
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@android:color/white"/>
        <View
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@color/AustriaRed"/>

        <View
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@android:color/white"/>
        <View
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:background="@color/PolandRed"/>

        <LinearLayout android:layout_width="200dp"
                      android:layout_height="150dp"
                      android:layout_marginTop="20dp"
                      android:layout_gravity="center"
                      android:orientation="horizontal">
            <View
                    android:layout_width="67dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:background="@color/ItalyGreen"/>
            <View
                    android:layout_width="66dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:background="@android:color/white"/>
            <View
                    android:layout_width="67dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:background="@color/ItalyRed"/>
        </LinearLayout>

        <View
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@color/ColombiaYellow"/>
        <View
                android:layout_width="200dp"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:background="@color/ColombiaBlue"/>
        <View
                android:layout_width="200dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:background="@color/ColombiaRed"/>

        <RelativeLayout android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center">
            <View
                    android:id="@+id/textViewOneDz1"
                    android:layout_width="67dp"
                    android:layout_height="150dp"
                    android:background="@android:color/white"/>
            <View
                    android:id="@+id/textViewOneDz2"
                    android:layout_width="133dp"
                    android:layout_height="75dp"
                    android:layout_toEndOf="@id/textViewOneDz1"
                    android:background="@color/MadagascarRed"/>
            <View
                    android:id="@+id/textViewOneDz3"
                    android:layout_width="133dp"
                    android:layout_height="75dp"
                    android:layout_toEndOf="@id/textViewOneDz1"
                    android:layout_below="@id/textViewOneDz2"
                    android:background="@color/MadagascarGreen"/>

        </RelativeLayout>

        <LinearLayout android:layout_width="200dp"
                      android:layout_height="150dp"
                      android:layout_marginTop="20dp"
                      android:layout_gravity="center"
                      android:orientation="vertical"
                      android:background="@android:color/white">
            <View
                    android:layout_width="200dp"
                    android:layout_height="25dp"
                    android:background="@color/ThailandRed"/>
            <View
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="25dp"
                    android:background="@color/ThailandBlue"/>
            <View
                    android:layout_width="200dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="25dp"
                    android:background="@color/ThailandRed"/>
        </LinearLayout>

        <RelativeLayout android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_gravity="center"
                        android:background="@android:color/white">
            <View
                    android:id="@+id/textViewOneDz4"
                    android:layout_width="67dp"
                    android:layout_height="62dp"
                    android:background="@color/DenmarkRed"/>
            <View
                    android:id="@+id/textViewOneDz5"
                    android:layout_width="116dp"
                    android:layout_height="62dp"
                    android:layout_toEndOf="@id/textViewOneDz4"
                    android:background="@color/DenmarkRed"
                    android:layout_marginStart="26dp"/>
            <View
                    android:id="@+id/textViewOneDz6"
                    android:layout_width="67dp"
                    android:layout_height="62dp"
                    android:layout_marginTop="26dp"
                    android:layout_below="@id/textViewOneDz5"
                    android:background="@color/DenmarkRed"/>
            <View
                    android:id="@+id/textViewOneDz7"
                    android:layout_width="116dp"
                    android:layout_height="62dp"
                    android:layout_marginTop="26dp"
                    android:layout_toEndOf="@id/textViewOneDz6"
                    android:layout_below="@+id/textViewOneDz5"
                    android:layout_marginStart="26dp"
                    android:background="@color/DenmarkRed"/>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>